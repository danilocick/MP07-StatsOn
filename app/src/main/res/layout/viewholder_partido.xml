<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recycler"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@drawable/boton_blanco">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fotoLocal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_equipo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/negro"
        android:layout_marginEnd="15dp"/>

        <TextView android:id="@+id/nombreLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/postnobillsjaffna_regular"
            android:text="@string/santaColoma" />

        <TextView android:id="@+id/puntosLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/reddark"
            android:textSize="20sp"
            android:fontFamily="@font/postnobillsjaffna_bold"
            android:text="35"
            android:padding="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vs"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />
        <TextView android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:text="21/04" />
    </LinearLayout>
        <TextView android:id="@+id/puntosVisitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/reddark"
            android:textSize="20sp"
            android:text="69"
            android:fontFamily="@font/postnobillsjaffna_bold"
            android:padding="8dp"/>

        <TextView android:id="@+id/nombreVisitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/partidoos"
            android:fontFamily="@font/postnobillsjaffna_regular"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fotoVisitante"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_equipo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/negro"
        android:layout_marginStart="15dp"/>
    </LinearLayout>