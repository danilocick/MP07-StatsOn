<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OutputMatchesFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:minHeight="50dp">
        <ImageButton
            android:id="@+id/botonComeBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingStart="7dp"
            android:background="@color/black"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3d455b"
        android:layout_alignParentLeft="true" >

        <HorizontalScrollView
            android:id="@+id/hscrll"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="@string/dorsal"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="2"
                        android:text="@string/nombre"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/min"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/pts"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/tl"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/t2"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/t3"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/rebotes"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/faltas"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/balones"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/tapones"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/pasos"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/dobles"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/violaciontecnica"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/asis"
                        android:layout_weight="1"
                        android:padding="3dip" />
                    <TextView
                        android:layout_column="3"
                        android:text="@string/valoracion"
                        android:layout_weight="1"
                        android:padding="3dip" />
                </TableRow>

                <View
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TableRow>
                    <TextView
                        android:text="X"
                        android:padding="3dip" />
                    <TextView
                        android:text="Export..."
                        android:padding="3dip" />
                    <TextView
                        android:text="Ctrl-E"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>